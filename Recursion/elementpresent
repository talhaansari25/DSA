// 6. a) is element present in string

#include<iostream>
using namespace std;

bool find(string str, int n, int  i, char key ){
    if(i>=n){
        return false;
    }
    if(str[i] == key ){
        return true;
    }
    return find(str,n,i+1,key);
}
int main()
{
    string str = "lovebabbar";
    int n = str.length();
    int i = 0;
    char key;
    cout<<"Enter key: ";
    cin>>key;
    bool isPresent = find(str,n,i,key);
    cout<<isPresent;
   return 0;
}